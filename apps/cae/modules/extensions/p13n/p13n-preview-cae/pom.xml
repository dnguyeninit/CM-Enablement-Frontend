  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <ignoredDependencies combine.children="append">
            <!-- main non-standard-build/runtime *AND* test compile dependencies. -->
            <ignoredDependency>org.springframework:spring-webmvc</ignoredDependency>
          </ignoredDependencies>
          <failOnWarning>true</failOnWarning>
        </configuration>
      </plugin>
    </plugins>
  </build>
